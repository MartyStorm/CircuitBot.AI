import { useState, useRef, useEffect } from "react";
import "./index.css";

function Pulse() {
  // simple animated “talking” pulse
  return (
    <div className="pulse">
      <svg viewBox="0 0 100 24" className="pulse-svg" aria-hidden>
        <polyline
          points="0,12 10,12 15,6 20,18 28,4 36,20 44,8 52,16 60,12 70,12 80,6 90,18 100,12"
          fill="none"
          stroke="currentColor"
          strokeWidth="3"
          strokeLinecap="round"
          strokeLinejoin="round"
        />
      </svg>
    </div>
  );
}

export default function App() {
  const [messages, setMessages] = useState([
    { role: "assistant", text: "Hey, I’m Echobot. Ready when you are." },
  ]);
  const [input, setInput] = useState("");
  const endRef = useRef(null);

  useEffect(() => {
    endRef.current?.scrollIntoView({ behavior: "smooth" });
  }, [messages]);

  const send = () => {
    const text = input.trim();
    if (!text) return;
    setMessages((m) => [...m, { role: "user", text }]);
    setInput("");

    // fake reply to prove UI works
    setTimeout(() => {
      setMessages((m) => [
        ...m,
        { role: "assistant", text: "Copy that. Let’s keep building." },
      ]);
    }, 500);
  };

  const onKey = (e) => {
    if (e.key === "Enter" && !e.shiftKey) {
      e.preventDefault();
      send();
    }
  };

  // Left sidebar filled with lots of mock chats
  const mockChats = Array.from({ length: 18 }, (_, i) => `Chat ${i + 1}`);

  return (
    <div className="wrap">
      <aside className="sidebar">
        <div className="brand">Fusion1AI</div>
        <div className="chats">
          {mockChats.map((c, i) => (
            <button key={i} className="chatItem">
              {i === 0 ? "Echobot — Getting Started" : c}
            </button>
          ))}
        </div>
      </aside>

      <main className="main">
        <header className="topbar">
          <div className="title">Echobot</div>
        </header>

        <section className="thread">
          {messages.map((m, i) => (
            <div
              key={i}
              className={`msg ${m.role === "user" ? "user" : "assistant"}`}
            >
              <div className="bubble">{m.text}</div>
            </div>
          ))}
          <div ref={endRef} />
        </section>

        <footer className="composer">
          {/* Your green pulse “character” snug to the input */}
          <div className="pulseHolder" title="Echobot is listening">
            <Pulse />
          </div>

          <textarea
            className="input"
            placeholder="Message Echobot…"
            value={input}
            onChange={(e) => setInput(e.target.value)}
            onKeyDown={onKey}
            rows={1}
          />
          <button className="send" onClick={send}>Send</button>
        </footer>
      </main>
    </div>
  );
}

